<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.practicas.janhout.actividadesinstituto" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
       >
        <activity
            android:name=".Principal"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NuevaActividad"
            android:label="@string/title_activity_nueva_actividad"
            android:parentActivityName=".Principal"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.practicas.janhout.actividadesinstituto.Principal" />
        </activity>
        <activity
            android:name=".DatosDetalle"
            android:label="@string/title_activity_datos_detalle"
            android:theme = "@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.practicas.janhout.actividadesinstituto.Principal" />
        </activity>
    </application>

</manifest>
